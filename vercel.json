{
    "version": 2,
    "builds": [
        {
            "src": "api/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "GEMINI_API_KEY": "@gemini_api_key",
        "GEMINI_MODEL": "gemini-1.5-flash"
    },
    "functions": {
        "api/app.py": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
} 